    tirar=int(input("Quantos fosforos quer retirar? "))
    while (tirar>4 or tirar<1):
        tirar=int(input("Insira um número inteiro entre 1 e 4 "))       
    n=n-tirar
    print("-",tirar)
    print(n)
    s=comp+tirar
    while s==5 and n>1:
        comp=random.choice(lista) 
        n=n-comp
        print("-",comp)
        print(n)
        tirar=int(input("Quantos fosforos quer retirar? "))
        while (tirar>4 or tirar<1):
            tirar=int(input("Insira um número inteiro entre 1 e 4 "))       
        n=n-tirar
        print("-",tirar)
        print(n)
        s=comp+tirar
    if s<5:
        comp=5-tirar-comp
        n=n-comp  
        print("-",comp)
    elif n>5:
        comp=10-s
        n=n-comp  
        print("-",comp)
    while n>1:        
        tirar=int(input("Quantos fosforos quer retirar? "))
        while (tirar>4 or tirar<1):
