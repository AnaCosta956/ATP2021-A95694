import random
lista=[1,2,3,4]
n=21
pc=0
jogador=int(input("Quer jogar como jogador 1 ou 2? "))
if jogador==1 :
    print (n)
    while n>1:
        tirar=int(input("Quantos fosforos quer retirar? "))
        while (tirar>4 or tirar<1):
            tirar=int(input("Insira um número inteiro entre 1 e 4 "))       
        n=n-tirar
        print("-",tirar)
        print(n)
        comp=5-tirar
        print("-",comp)
        n=n-comp
        print(n)
    print("O jogador 2 venceu")
elif jogador==2:
    print(n)
    comp=random.choice(lista) 
    n=n-comp 
    print("-",comp)
